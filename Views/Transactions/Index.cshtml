    function formatDate(dateString) {
    // Extract the milliseconds from the date string
    var milliseconds = parseInt(dateString.substr(6));
    // Create a new Date object with the milliseconds
    var date = new Date(milliseconds);
    // Format the date as "YYYY-MMM-DD"
    var formattedDate = date.getFullYear() + '-' +
                        date.toLocaleString('default', { month: 'short' }) + '-' +
                        date.getDate();
    return formattedDate;
}

    $(document).ready(function () {
        $('#tranxList').DataTable({
            dom: 'Bfrtip',
        buttons: [
           'excel', 'print'
        ],
        "pageLength": 25,
        "processing": true,
        "paging": true,
        "serverSide": true,
        "ajax": {
            "url": '@Url.Action("index", "transactions")',
            "type": "POST",
            "dataType": "json",
            "data": function (d) {
                console.log(d);

                d.start = d.start || 0;
                d.length = d.length || 25; // This sets the default number of records to 10
            }
        },
        "columns": [
            { "data": "EmailAddress" },
            {   "data": "CardOwner" },
            {   "data": "TranxAmount" },
            {
                "data": "TranxDate",
                "render": function (data, type, row) {
                console.log(data);
                    if(data != null)
                        return formatDate(data);
                }
            },
            { "data": "PlanDesc" },
            { "data": "OrderID" },
            {
                "data": "Subscriber_TranxID",
                "render": function (data, type, row, meta) {
                    //console.log(data);
                     var Url = $('#tranxList').data().requestUrl;
                    return '<a href="'+ Url +'/' + data + '">Edit</a>';
                    //return '<a href="/admin/transactions/edit/' + data + '">Edit</a>';
                }
            }
        ]
    });
});
    </script>
}