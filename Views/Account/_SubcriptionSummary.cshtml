
    <style>
        .summary-links ul i {
            padding-right: 2px;
            color: #E62B34;
            font-size: 18px;
            line-height: 1;
            margin-left: -5px;
        }
    </style>

    <div class="portfolio-info summary-links">
        @*<h5><strong>The Jamaica Observer Limited</strong> </h5>*@
        <div class="text-center">
            <a href="https://wwww.jamaicaobserver.com/" class="text-center"><img src="@Url.Content("~/assets/img/jol-logo-sm.png")" alt="" width="235" class="img-fluid"></a>
        </div>
        @if (!string.IsNullOrWhiteSpace((string)ViewData["pkgType"]))
        {
            <p>@ViewData["pkgType"] Plan</p><br />
        }

        @if ((Dictionary<string, int>)ViewData["preloadSub"] != null)
        {
            var preloadSub = (Dictionary<string, int>)ViewData["preloadSub"];
            <div id="subSummary" class="text-center pb-4">
            @foreach (var plans in preloadSub)
            {
                ViewData["rateType"] = plans.Key.Split('|')[0];
                var freq = plans.Key.Split('|')[4];
                freq = (freq != "undefined" && freq != null) ? freq.Split(':')[0] + "<br>" + freq.Split(':')[1] : String.Empty;
               
                <strong>@plans.Key.Split('|')[0].ToUpper() SUBSCRIPTION</strong><br />
                @plans.Key.Split('|')[1];<br />
                <small>@Html.Raw(freq)</small>
                <p class="pt-1 text-success fw-semibold fs-3">@plans.Key.Split('|')[3]</p>

            }
            </div>
        }
        <p class="text-center"><strong>Your subscription start date</strong></p>
        <p class="text-center fs-6">Your subscription starts <span id="subStartDate">today: @DateTime.Now.ToString("d/MM/yyyy")</span></p>

        
        <br />
        <p class="text-center"><strong>What's included?</strong></p>
        
        <ul>
            @if (ViewData["rateType"] != null)
            {
                var rateType = ViewData["rateType"];

                switch (rateType)
                {
                    case "Epaper":
                        <li><i class="bx bx-chevron-right"></i>Observer's smartphone app and tablet edition</li>
                        <li><i class="bx bx-chevron-right"></i>Digital editions of all print media</li>
                        <li><i class="bx bx-chevron-right"></i>Full access to articles and premium content</li>
                        <li><i class="bx bx-chevron-right"></i>Less ads, no surveys, faster site!</li>
                        break;
                    case "Print":
                        <li><i class="bx bx-chevron-right"></i>Delivery of all printed editions *</li>
                        <li><i class="bx bx-chevron-right"></i>All supplements offered via print media</li>
                        break;
                    case "Bundle":
                        <li><i class="bx bx-chevron-right"></i>Delivery of all printed editions *</li>
                        <li><i class="bx bx-chevron-right"></i>All supplements offered via print media</li>
                        <li><i class="bx bx-chevron-right"></i>Digital editions of all print media</li>
                        <li><i class="bx bx-chevron-right"></i>The Sunday Observer</li>
                        <li><i class="bx bx-chevron-right"></i>The Daily Observer</li>
                        <li><i class="bx bx-chevron-right"></i>The Saturday Observer</li>
                        break;
                    default:

                        break;
                }
            }
            else
            {
                <li><i class="bx bx-chevron-right"></i>Observer's smartphone app and tablet edition</li>
                <li><i class="bx bx-chevron-right"></i>Digital editions of all print media</li>
                <li><i class="bx bx-chevron-right"></i>Full access to articles and premium content</li>
                <li><i class="bx bx-chevron-right"></i>Less ads, no surveys, faster site!</li>
                <li><i class="bx bx-chevron-right"></i>Delivery of all printed editions *</li>
                <li><i class="bx bx-chevron-right"></i>All supplements offered via print media</li>
            }
        </ul>
        <br />


    </div>
