@model IEnumerable<ePaperLive.Models.SubscriptionDetails>

    <div class="container" style="margin-top: 5em;">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RateDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RateDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubType)
                    </td>
                    <td>
                        @Convert.ToDateTime(item.StartDate).ToString("dd MMMM yyyy")
                    </td>
                    <td>
                        @Convert.ToDateTime(item.EndDate).ToString("dd MMMM yyyy")
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.RateID }) |
                        @Html.ActionLink("Cancel Subscription", "Cancel", new { id = item.RateID })
                    </td>
                </tr>
            }

        </table>

    </div>
