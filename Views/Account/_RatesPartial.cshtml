@model ePaperLive.Models.PrintSubRates

@if (Model.Rates == null)
{
    <h3 class="text-error">No items matched your search query!</h3>
}
else
{
    foreach (var plans in Model.Rates)
    {
        var printWeeks = (plans.Type != "Epaper") ? "  [" + plans.PrintTerm + " " + plans.PrintTermUnit + "] " : "";
        <label id="rate">
            @Html.RadioButton("RateID", plans.Rateid, htmlAttributes: new { @class = "" })
            <span class="value">@(" " + plans.RateDescr + printWeeks) <span style="margin-left: auto">@(plans.Curr + String.Format("{0:C}",plans.Rate)) </span></span>
        </label>
    }
}