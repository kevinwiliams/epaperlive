
@{
    ViewBag.Title = "Dashboard";
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <ol>
                <li><a href="@Url.Action("index", "home")">Home</a></li>
                <li>@ViewData["Title"]</li>
            </ol>
            <h2>Welcome, @ViewData["userFirstName"]</h2>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Wizard Section ======= -->
    <section id="portfolio-details" class="portfolio-details">
        <div class="container">

            <div class="row gy-4">
                <div class="col-lg-8">
                    <!-- left-col -->
                    
                    <div class="row">
                        <h5>Today's Paper</h5>
                        <div class="col-lg-4 hero-img" data-aos="fade-right">
                            <!-- Press Reader Front Page -->
                            <a href="@Url.Action("ReadPaper", "Account")">
                                <img src="@String.Format("https://i.prcdn.co/img?cid=9IJ5&page=1&height=300?{0}", DateTime.Now.ToString("yyyyMMdd"))" class="img-fluid" alt="" style="border: 2px solid red;">
                            </a>
                        </div>
                        <div class="col-lg-8">
                            <p>Click the front page to read your ePaper or click here</p>

                        </div>
                    </div>
                    




                    <!-- end:left-col -->
                </div>
                <div class="col-lg-4">
                    <div class="portfolio-info">
                        <h3>Active Subscription</h3>
                        @if (ViewBag.plans != null)
                        {
                            foreach (var item in (List<ePaperLive.Models.SubscriptionDetails>)ViewBag.plans)
                            {
                                <p>@item.RateDescription</p>
                                <small>
                                    <strong>Start:</strong> @Convert.ToDateTime(item.StartDate).ToString("dd MMMM yyyy") <br />
                                    <strong>End:&nbsp;&nbsp;</strong> @Convert.ToDateTime(item.EndDate).ToString("dd MMMM yyyy") <br />
                                    <!-- <a href="#">Cancel</a> -->
                                </small>

                            }
                        }
                        <br />
                      
                    </div>
                   
                </div>





            </div>

        </div>
    </section><!-- End Wizard Section -->

</main><!-- End #main -->
