@Scripts.Render("~/bundles/jquery")

<script>
    let newsletterEmail = $('#newsletterEmail').val();
    $(function () {
        $('#mce-EMAIL').val(newsletterEmail);
        console.log('#newsletterEmail', newsletterEmail);
    });
</script>