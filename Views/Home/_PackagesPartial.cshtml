@model ePaperLive.Models.PrintSubRates

@if (Model.Rates == null)
{
    <h3 class="text-error">Loading.. please wait...</h3>
}
else
{
    <div class="row">
        <div class="col-lg-4 mt-2 mb-tg-0 order-2 order-lg-1">
            <ul class="nav nav-tabs flex-column">
                <li class="nav-item" data-aos="fade-up">
                    <a class="nav-link active show" data-bs-toggle="tab" href="#tab-1">
                        <h4>Digital Only</h4>
                        <p>Choose from our ePaper options</p>
                    </a>
                </li>
                <li class="nav-item mt-2" data-aos="fade-up" data-aos-delay="100">
                    <a class="nav-link" data-bs-toggle="tab" href="#tab-2">
                        <h4>Print Only</h4>
                        <p>Get our print media on your schedule</p>
                    </a>
                </li>
                <li class="nav-item mt-2" data-aos="fade-up" data-aos-delay="200">
                    <a class="nav-link" data-bs-toggle="tab" href="#tab-3">
                        <h4>Digital &amp; Print Bundles</h4>
                        <p>Best of both worlds for the avid reader.</p>
                    </a>
                </li>

            </ul>
        </div>
        <div class="col-lg-8 order-1 order-lg-2" data-aos="zoom-in">
            <div class="tab-content">
                <div class="tab-pane active show" id="tab-1">
                    @foreach (var plans in Model.Rates.Where(x => x.Type == "Epaper"))
                    {
                        <span class="value">@(" " + plans.RateDescr ) <span style="margin-left: auto">@(plans.Curr + " " + String.Format("{0:C}", plans.Rate)) </span></span><br />
                    }

                    <figure>
                        <img src="assets/img/features-1.png" alt="" class="img-fluid">
                    </figure>
                </div>
                <div class="tab-pane" id="tab-2">
                    @foreach (var plans in Model.Rates.Where(x => x.Type == "Print"))
                    {
                        var printWeeks ="  [" + plans.PrintTerm + " " + plans.PrintTermUnit + "] ";

                        <span class="value">@(" " + plans.RateDescr + printWeeks) <span style="margin-left: auto">@(plans.Curr + " " + String.Format("{0:C}", plans.Rate)) </span></span><br />
                    }
                    <figure>
                        <img src="assets/img/features-2.png" alt="" class="img-fluid">
                    </figure>
                </div>
                <div class="tab-pane" id="tab-3">
                    @foreach (var plans in Model.Rates.Where(x => x.Type == "Bundle"))
                    {
                        <span class="value">@(" " + plans.RateDescr) <span style="margin-left: auto">@(plans.Curr + " " + String.Format("{0:C}", plans.Rate)) </span></span> <br />
                    }
                    <figure>
                        <img src="assets/img/features-3.png" alt="" class="img-fluid">
                    </figure>
                </div>

            </div>
        </div>
    </div>

}