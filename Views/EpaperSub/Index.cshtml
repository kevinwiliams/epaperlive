@model IEnumerable<ePaperLive.DBModel.Subscriber_Epaper>

@{
    ViewBag.Title = "ePaper Subscribers";
}

<div id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <ol>
                <li><a href="@Url.Action("index", "home")">Home</a></li>
                <li><a href="@Url.Action("epapersub", "admin")">ePaper Subscribers</a></li>
                <li>@ViewData["Title"]</li>
            </ol>
            <h2>@ViewData["Title"]</h2>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Wizard Section ======= -->
    <section id="portfolio-details" class="portfolio-details">
        <div class="container">

            <div class="row gy-4">
                <div class="col-lg-12">
                    <!-- start:wizrd -->
                    <div class="container-fluid ">

                        <p>
                            <a href="@Url.Action("addsubscriber", "epapersub")">Create New</a>
                        </p>
                        <table class="table table-hover table-responsive table-striped small" id="epaperSubList" data-request-url="@Url.Action("index","epapersub")">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EmailAddress)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.StartDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EndDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IsActive)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PlanDesc)
                                    </th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Data rows will be populated dynamically by the DataTables plugin -->
                               
                            </tbody>
                        </table>
                    </div>
                    <!-- end:wizrd -->
                </div>


            </div>

        </div>
    </section><!-- End Wizard Section -->

</div>

@section scripts{
<script>
    /*$('#epaperSubList').DataTable({
            "pageLength": 25
    });*/
    function formatDate(dateString) {
    // Extract the milliseconds from the date string
    var milliseconds = parseInt(dateString.substr(6));
    // Create a new Date object with the milliseconds
    var date = new Date(milliseconds);
    // Format the date as "YYYY-MMM-DD"
    var formattedDate = date.getFullYear() + '-' + 
                        date.toLocaleString('default', { month: 'short' }) + '-' + 
                        date.getDate();
    return formattedDate;
}

    $(document).ready(function () {
        $('#epaperSubList').DataTable({
             dom: 'Bfrtip',
        buttons: [
           'excel', 'print'
        ],
        "pageLength": 25,
        "processing": true,
        "serverSide": true,
        "ajax": {
            "url": '@Url.Action("index", "epapersub")',
            "type": "POST",
            "dataType": "json",
            "data": function (d) {
                console.log(d);
                
                d.start = d.start || 0;
                d.length = d.length || 25; // This sets the default number of records to 10
            }
        },
        "columns": [
            {
                "data": "EmailAddress" },
            { 
                "data": "StartDate",
                "render": function (data, type, row) {
                    return formatDate(data);
                }
            },
            {
                "data": "EndDate",
                "render": function (data, type, row) {
                    return formatDate(data);
                }
            },
            { "data": "IsActive" },
            { "data": "PlanDesc" },
            {
                "data": "Subscriber_EpaperID",
                "render": function (data, type, row, meta) {
                    //console.log(data);
                    return '<a href="/admin/epapersub/edit/' + data + '">Edit</a>';
                }
            }
        ]
    });
});

</script>
}